num_1 = int(input('–í–≤–µ–¥–∏ –ø–µ—Ä–≤–æ–µ —á–∏—Å–ª–æ:'))
num_2 = int(input('–í–≤–µ–¥–∏ –≤—Ç–æ—Ä–æ–µ —á–∏—Å–ª–æ:'))
print('–î–æ—Å—Ç—É–ø–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏:', '—Å–ª–æ–∂–µ–Ω–∏–µ', '–≤—ã—á–∏—Ç–∞–Ω–∏–µ', '—É–º–Ω–æ–∂–µ–Ω–∏–µ', '–¥–µ–ª–µ–Ω–∏–µ', '—Ü–µ–ª–æ—á–∏—Å–ª–µ–Ω–Ω–æ–µ –¥–µ–ª–µ–Ω–∏–µ', '–¥–µ–ª–µ–Ω–∏–µ —Å –æ—Å—Ç–∞—Ç–∫–æ–º', '–≤–æ–∑–≤–µ–¥–µ–Ω–∏–µ –≤ —Å—Ç–µ–ø–µ–Ω—å', sep='\n')
operation = input('–ù–∞–ø–∏—à–∏, –∫–∞–∫—É—é –æ–ø–µ—Ä–∞—Ü–∏—é —Ç—ã —Ö–æ—á–µ—à—å –≤—ã–ø–æ–ª–Ω–∏—Ç—å:')
class Calc:
    numbers ={'1':'üôÇ',
              '2':'üëç',
              '3':'üê∂',
              '4':'üî•',
              '5':'ü•Æ',
              '6':'üí™',
              '7':'‚úã',
              '8':'‚öΩ',
              '9':'‚öì',
              '0':'‚ù§',
              '.':'.'
    }

    def __init__(self, a, b):
        self.a = a
        self.b = b

    def int_to_numbers(self, num):
        return ''.join(self.numbers[char] for char in str(num))

    def sum(self):
        return self.int_to_numbers(self.a + self.b)

    def diff(self):
        return self.int_to_numbers(self.a - self.b)

    def mul(self):
        return self.int_to_numbers(self.a * self.b)

    def div(self):
        return self.int_to_numbers(self.a / self.b)

    def voz(self):
        return self.int_to_numbers(self.a**self.b)

    def div_01(self):
        return self.int_to_numbers(self.a // self.b)

    def div_02(self):
        return self.int_to_numbers(self.a % self.b)

calc = Calc(num_1,num_2)
if operation == '—Å–ª–æ–∂–µ–Ω–∏–µ':
    print(calc.sum())
if operation == '–≤—ã—á–∏—Ç–∞–Ω–∏–µ':
    print(calc.diff())
if operation == '—É–º–Ω–æ–∂–µ–Ω–∏–µ':
    print(calc.mul())
if operation == '–¥–µ–ª–µ–Ω–∏–µ':
    print(calc.div())
if operation == '—Ü–µ–ª–æ—á–∏—Å–ª–µ–Ω–Ω–æ–µ –¥–µ–ª–µ–Ω–∏–µ':
    print(calc.div_01())
if operation == '–¥–µ–ª–µ–Ω–∏–µ —Å –æ—Å—Ç–∞—Ç–∫–æ–º':
    print(calc.div_02())
if operation == '–≤–æ–∑–≤–µ—Å—Ç–∏ –≤ —Å—Ç–µ–ø–µ–Ω—å':
    print(calc.voz())
